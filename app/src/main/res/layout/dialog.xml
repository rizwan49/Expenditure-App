<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/error_bg_color"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_cross" />

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errorView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/sp_18"
        android:gravity="center_horizontal"
        android:textColor="@color/dialog_text_color"
        android:textSize="@dimen/sp_18" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sp_20"
        android:backgroundTint="@color/error_bg_color"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/ok"
        android:textColor="@color/white" />

</RelativeLayout>